<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shaza.episenseversion20">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Profile"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EContacts"
            android:label="@string/title_activity_econtacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConsultantInfo"
            android:label="@string/title_activity_consultant_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MedicalRec"
            android:label="@string/title_activity_medical_rec"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AppStatus"
            android:label="@string/title_activity_appstatus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".loginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".signUp" />
        <activity android:name=".Add_Contacts" />
        <activity android:name=".MessageSystem" />

        <service android:name=".BackgroundService" />

        <receiver android:name=".AlarmReceiver" />
        <activity android:name=".AlarmStop"></activity>
    </application>

</manifest>